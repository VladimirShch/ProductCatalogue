<Window x:Class="ProductCatalogue.WPF.Presentation.Products.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductCatalogue.WPF.Presentation.Products.Views"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label>Name</Label>
            <TextBox Text="{Binding Product.Name}"/>
            <Label>Type</Label>
            <TextBox Text="{Binding Product.Type}"/>
            <Label>Price</Label>
            <TextBox Text="{Binding Product.Price}"/>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding Save}">OK</Button>
                <Button IsCancel="True">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
